@model IEnumerable<DAPM_TOURDL.Models.SPTOUR>

@{
    ViewBag.Title = "ChiTietTour";
    Layout = "~/Views/Shared/ClientLayout.cshtml";
}
<link rel="stylesheet" href="~/CSS/Client/ChiTietTour.css" />

<div class="head">
    <div class="content-main">Chi tiết tour</div>
    <video autoplay loop muted plays-inline class="hero-image"><source src="~/Images/Client/Video/ocean.mp4" /></video>
</div>
@foreach (var item in Model)
{
    <div class="content-img-details">
        <img class="img-details" src="~/Images/Admin/SPTOUR/@item.HinhAnh">
    </div>

    <div class="card mb-3 card-tour chitiettour" style="border:none">
        <div style="font-weight: bold; text-align: center;">
            <h1 class="title"><span class="particletext">Detail TOUR</span></h1>
        </div>
        <div class="row g-0 d-flex justify-content-center">
            <div class="col-8 text">
                <h3 class="text-center">Tour du lịch: @Html.DisplayFor(modelItem => item.TenSPTour)</h3>
                <h3>Giới thiệu</h3>
                <p>@Html.DisplayFor(modelItem => item.MoTa)</p>
                <p>Điểm tập trung:  @Html.DisplayFor(modelItem => item.DiemTapTrung)</p>
                <p>Điểm đến: @Html.DisplayFor(modelItem => item.DiemDen)</p>
                <p>Ngày khởi hành: @Html.DisplayFor(modelItem => item.NgayKhoiHanh)</p>
                <p>Ngày kết thúc: @Html.DisplayFor(modelItem => item.NgayKetThuc)</p>
                <hr />
                <div class="text-right">
                    <h3>Dịch vụ</h3>
                    <p>Giá người lớn: @string.Format("{0:#,#}đ", item.GiaNguoiLon)</p>
                    <p>Giá trẻ em: @string.Format("{0:#,#}đ", item.GiaTreEm)</p>
                    <p>Số ghế còn trống: @Html.DisplayFor(modelItem => item.SoNguoi)</p>
                </div>
            </div>
        </div>
        <div class="ngoaitour" style="text-align:center;">
            <a style="color: white;text-decoration:none" href="@Url.Action("DatTour", "Home", new {id=item.ID_SPTour})">Đặt Tour</a>
        </div>
    </div>
}
